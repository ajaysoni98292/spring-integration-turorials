<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-file="http://www.springframework.org/schema/integration/file"
       xmlns:int-xml="http://www.springframework.org/schema/integration/xml"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd

	http://www.springframework.org/schema/integration/file http://www.springframework.org/schema/integration/file/spring-integration-file.xsd
	http://www.springframework.org/schema/integration/xml http://www.springframework.org/schema/integration/xml/spring-integration-xml.xsd">

    <!-- Adapter for reading files -->

    <int-file:inbound-channel-adapter id="producer-file-adapter"
                                      channel="inboundChannel" directory="file:C://inbound"
                                      prevent-duplicates="true">
        <int:poller fixed-rate="5000"/>
    </int-file:inbound-channel-adapter>

    <!-- Here i am giving the channel identification according to there ids -->

    <int:channel id="inboundChannel"></int:channel>


    <!-- Here i am reading and transforming the xml file -->

    <int-file:file-to-string-transformer
            id="file-2-string-transformer" input-channel="inboundChannel"
            output-channel="xml-inboundChannel" charset="UTF-8"/>

    <!-- here i am giving the router -->

    <int:channel id="xml-inboundChannel"></int:channel>

    <int-xml:xpath-router id="orderTypeRouter"
                          input-channel="xml-inboundChannel">
        <int-xml:xpath-expression expression="/shiporder/shipto/country" />
        <int-xml:mapping value="AUS" channel="ausChannel" />
        <int-xml:mapping value="USA" channel="usaChannel" />
    </int-xml:xpath-router>

    <!--Now here i am defining the outbound channel for usa and aus -->

    <int-file:outbound-channel-adapter channel="usaChannel"
                                       id="consumer-file-adapter2"
                                       directory="file:c://outboundAmerica" />

    <int:channel id="usaChannel"></int:channel>

    <int-file:outbound-channel-adapter channel="ausFirstChannel"
                                       id="consumer-file-adapter1"
                                       directory="file:c://outboundAustralia" />

    <int:channel id="ausChannel"></int:channel>
    <int:channel id="ausFirstChannel"></int:channel>
    <int:channel id="ausSecondChannel"></int:channel>

    <!-- Here i am defining the new recipient router whic-->

    <int:recipient-list-router input-channel="ausChannel">
        <int:recipient channel="ausFirstChannel" />
        <int:recipient channel="ausSecondChannel" />
    </int:recipient-list-router>



<!--    <int-xml:unmarshalling-transformer id="xml-2-object-transformer" input-channel="ausChannel"
                                       output-channel="ausSecondChannel"
                                       unmarshaller="jaxbMarshaller"></int-xml:unmarshalling-transformer>

    &lt;!&ndash; This is common for both marshaling and unmarshalling &ndash;&gt;
    <bean id="jaxbMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="contextPath" value="com.spring.integration.channel.domain"></property>
    </bean>-->

    <!-- This is service activator for do any service or bossiness logic -->
    <int:service-activator id="printing-service-activator"
                           input-channel="ausSecondChannel" ref="serviceActivator"/>
    <bean id="serviceActivator" class="com.spring.integration.channel.ExampleServiceActivator"/>

</beans>

